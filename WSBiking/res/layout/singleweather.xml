<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItemRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >


        <ImageView
            android:id="@+id/imgBtnShowMap1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@drawable/show_on_map"
            android:clickable="true"
            android:contentDescription="show_on_map_image"
            android:onClick="showRouteOnMap" />



    <TextView
        android:id="@+id/txtVwWeatherTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgBtnShowMap1"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/imgBtnShowMap1"
        android:textSize="20sp"  
        android:text="TextView" />


    <TextView
        android:id="@+id/txtVwWeatherDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBtnShowMap1"
        android:layout_alignLeft="@+id/txtVwWeatherTime"
        android:text="TextView"
        android:textSize="23sp"   />
    <TextView
        android:id="@+id/txtVwWeatherTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="35sp"   />
       
</RelativeLayout>