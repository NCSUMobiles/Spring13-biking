<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

     <ImageView
         android:id="@+id/banner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:contentDescription="banner text"
         android:src="@drawable/banner" />

     <ImageView
         android:id="@+id/bike"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/banner"
         android:contentDescription="banner image"
         android:src="@drawable/bike" />

     <ImageButton
         android:id="@+id/SignUp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/FLogin"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="16dp"
         android:background="@drawable/signup_selector"
         android:contentDescription="signup" />

     <ImageButton
         android:id="@+id/NLogin"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/SignUp"
         android:layout_below="@+id/bike"
         android:layout_marginTop="16dp"
         android:background="@drawable/login_selector"
         android:contentDescription="@string/login" />

     <ImageButton
         android:id="@+id/FLogin"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/SignUp"
         android:layout_below="@+id/NLogin"
         android:layout_marginTop="16dp"
         android:background="@drawable/fblogin_selector"
         android:contentDescription="@string/login" />

</RelativeLayout>